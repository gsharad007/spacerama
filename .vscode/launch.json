    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'spacerama'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=spacerama",
                    "--package=spacerama"
                ],
                "filter": {
                    "name": "spacerama",
                    "kind": "bin"
                }
            },
            "args": [
                "--player-count",
                "1"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'spacerama'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=spacerama",
                    "--package=spacerama"
                ],
                "filter": {
                    "name": "spacerama",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
            }
        }
    ]
}